#include <iostream>
#include <iomanip>
#include <string>

 using namespace std; 

 void afficherDateEtHeure( string s)
 {
  if (s.length()!=12) { cout<<"Chaine Invalide ";}
  else {
    cout<<"Date : " <<s.substr(0,2)<<"/"<<s.substr(3,2)<<"/"<<s.substr(4,4)<<endl;
    cout<<"Heur : " <<s.substr(8,2)<<"h"<<s.substr(10,2)<<endl;
  }
 };
 
 int main (){
  string n="301120221842";
  afficherDateEtHeure(n);

  return 0;
 }
 
